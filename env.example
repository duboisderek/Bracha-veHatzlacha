# Production Environment Variables for BrachaVeHatzlacha
# Copy this file to .env and configure your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Session Security
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters

# Server Configuration
NODE_ENV=production
PORT=5000

# Email Service (Hostinger SMTP)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password

# SMS Service (Optional - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# Security Headers
TRUST_PROXY=1

# Backup Service (Optional)
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_PROVIDER=neon

# Application Settings
LOTTERY_TICKET_PRICE=20
WELCOME_BONUS=100
JACKPOT_MINIMUM=100000

# Development Override (set to false for production)
DISABLE_SECURITY_HEADERS=false